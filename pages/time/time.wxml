<view class="content">

  <view>
    <view>
      <view class="cu-bar bg-white">
        <view class="action">
          <text class="cuIcon-titles text-green"></text>
          <text class="text-xl text-bold">上班时间</text>
        </view>
      </view>
      <form class="form-style">
        <!-- 时间 -->
        <view class="cu-form-group">
          <view class="title">时间选择</view>
          <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
            <view class="picker">
              {{time}}
            </view>
          </picker>
        </view>
      </form>
    </view>

    <view>
      <view class="cu-bar bg-white">
        <view class="action">
          <text class="cuIcon-titles text-red"></text>
          <text class="text-xl text-bold">下班时间</text>
        </view>
      </view>
      <form class="form-style">
        <!-- 时间 -->
        <view class="cu-form-group">
          <view class="title">时间选择</view>
          <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
            <view class="picker">
              {{time}}
            </view>
          </picker>
        </view>
      </form>
    </view>

    <view>
      <view class="cu-bar bg-white">
        <view class="action">
          <text class="cuIcon-titles text-yellow"></text>
          <text class="text-xl text-bold">地址选择</text>
        </view>
      </view>
      <form class="form-style">
        <!-- 地址 -->
        <view class="cu-form-group">
          <view class="title">地址选择</view>
          <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker">
              {{region[0]}}，{{region[1]}}，{{region[2]}}
            </view>
          </picker>
        </view>
      </form>
    </view>
  </view>

  <view class="btn-style">
    <view class="padding flex flex-direction">
      <button class="cu-btn bg-blue margin-tb-sm lg">确认修改时间</button>
    </view>
    <view class="padding flex flex-direction">
      <button class="cu-btn block line-blue margin-tb-sm lg">取消修改时间</button>
    </view>
  </view>

  <!-- 距离下班时间显示 -->
  <view>
    <view class="time-style">
      <view class="grid col-6 margin-bottom text-center">
        <view class="time-style-item">
          <view>
            {{timeShow.hour}}
          </view>
        </view>
        <view class="time-style-item-text">
          <view>
            时
          </view>
        </view>
        <view class="time-style-item">
          <view>
            {{timeShow.min}}
          </view>
        </view>
        <view class="time-style-item-text">
          <view>
            分
          </view>
        </view>
        <view class="time-style-item">
          <view>
            {{timeShow.sec}}
          </view>
        </view>
        <view class="time-style-item-text">
          <view>
            秒
          </view>
        </view>
      </view>
    </view>

    <!-- 进度条 -->
    <view class="cu-bar bg-white solid-bottom">
      <view class="action">
        <text class="cuIcon-title text-blue"></text>时间进度比例
      </view>
    </view>
    <view class="padding bg-white">
      <view class="cu-progress radius striped active">
        <view class="bg-red" style="width:{{loading?'50%':''}};">已度过50%</view>
        <view class="bg-cyan" style="width:{{loading?'50%':''}};">剩余50%</view>
      </view>
    </view>
  </view>

  <view>
    <view class="gif-style">
      <image src="https://image.weilanwl.com/gif/loading-black.gif" mode="aspectFit" class="gif-black response"
        style="height:240rpx;"></image>
    </view>
  </view>

</view>